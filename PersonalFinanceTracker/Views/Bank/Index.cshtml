@{
    Layout = "_Layout"; // Ensure this points to the correct layout file name
    ViewData["Title"] = "Banks";
}

<script src="https://cdn.plaid.com/link/v2/stable/link-initialize.js"></script>

<p>
    <button class="btn btn-icon btn-3 btn-primary" type="button" id="createButton" title="Create">
        <span class="btn-inner--icon"><i class="fa fa-plus"></i></span>
        <span class="btn-inner--text">Create</span>
    </button>

    <button class="btn btn-icon btn-3 btn-primary" type="button" id="integrateButton" title="integrate">
        <span class="btn-inner--icon"><i class="fa fa-plus"></i></span>
        <span class="btn-inner--text">Integrate</span>
    </button>

    <button class="btn btn-icon btn-3 btn-primary" type="button" id="refresh" title="refresh">
        <span class="btn-inner--icon"><i class="fa fa-refresh"></i></span>
        <span class="btn-inner--text">Refresh</span>
    </button>
</p>

<div class="row">
    <div class="col-md-12 margin-top-20">
        <div class="table-responsive">
            <table id="gridContainer" class="table table-striped table-hover table-bordered dataTables-example dataTable no-footer "></table>
        </div>
    </div>
</div>

<script src="~/js/app/banks.js" defer></script>