@model PersonalFinanceTracker.Model.BanksOut
<h4>Banks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyCode" class="control-label"></label>
                <span class="fa fa-circle-info" title="Currency Code can be updated in the profile."></span>
                <select asp-for="CurrencyCode" class="form-control">
                    @foreach (var option in Model.UserCurrencyCode)
                    {
                        <option>@option</option>
                    }
                </select>
                <span asp-validation-for="CurrencyCode" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClosingBalance" class="control-label"></label>
                <input asp-for="ClosingBalance" class="form-control" />
                <span asp-validation-for="ClosingBalance" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
